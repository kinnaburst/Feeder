<% content_for :page_title do %>Signup<% end %>

<%= form_for @user, url: signup_path do |f| %>
	
	<%= f.label :username %>
	<%= f.text_field :username, autofocus: true %>

	<%= f.label :password %>
	<%= f.password_field :password %>

	<%= f.label :password_confirmation %>
	<%= f.password_field :password_confirmation %>

	<%= f.submit %>

<% end %>