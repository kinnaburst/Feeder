<% content_for :page_title do %>Change Your Password<% end %>

<%= form_for current_user, url: user_path(username: current_user.username) do |f| %>

	<%= f.label :old_password %>
	<%= f.password_field :old_password, autofocus: true %>

	<%= f.label :password %>
	<%= f.password_field :password %>

	<%= f.label :password_confirmation %>
	<%= f.password_field :password_confirmation %>

	<%= f.submit 'Change Password' %>

<% end %>

<div class="form-footer">
  <%= link_to 'Delete my account', destroy_user_path(username: current_user.username), method: :delete, data: { confirm: 'Are you sure?' } %>
</div>